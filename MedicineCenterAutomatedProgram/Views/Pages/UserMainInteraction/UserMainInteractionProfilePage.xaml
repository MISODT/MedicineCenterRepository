                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Margin="{TemplateBinding Margin}" Padding="{TemplateBinding Padding}" CornerRadius="3">
                                                            <ContentPresenter Margin="{TemplateBinding Margin}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>

                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5AF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </StackPanel>

                            <TextBlock Name="UserDataUniversityEndEducationYearComboBoxHintAssist" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5 0 0 7" Text="Год" Style="{DynamicResource UserDataFieldHintAssistTextBlockStyle}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Text="Смена пароля" Style="{DynamicResource UserDataLabelTextBlockStyle}"/>

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50 5 5 5" Text="Старый пароль" Style="{DynamicResource UserDataFieldLabelTextBlockStyle}"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <PasswordBox Name="UserDataOldPasswordPasswordBox" PasswordChanged="UserDataOldPasswordPasswordBox_PasswordChanged" MaxLength="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="45 5 5 5" Style="{DynamicResource UserDataPasswordBoxStyle}"/>

                            <Button Name="ClearOldPasswordButton" Click="ClearOldPasswordButton_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" Content="{materialDesign:PackIcon Kind=Clear}" Style="{DynamicResource ClearUserDataButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Name="UserDataOldPasswordPasswordBoxHintAssist" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50 0 0 13" Text="Старый пароль" Style="{DynamicResource UserDataFieldHintAssistTextBlockStyle}"/>
                </Grid>

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50 5 5 5" Text="Новый пароль" Style="{DynamicResource UserDataFieldLabelTextBlockStyle}"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <PasswordBox Name="UserDataNewPasswordPasswordBox" PasswordChanged="UserDataNewPasswordPasswordBox_PasswordChanged" MaxLength="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="45 5 5 5" Style="{DynamicResource UserDataPasswordBoxStyle}"/>

                            <Button Name="ClearNewPasswordButton" Click="ClearNewPasswordButton_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" Content="{materialDesign:PackIcon Kind=Clear}" Style="{DynamicResource ClearUserDataButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Name="UserDataNewPasswordPasswordBoxHintAssist" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50 0 0 13" Text="Новый пароль" Style="{DynamicResource UserDataFieldHintAssistTextBlockStyle}"/>
                </Grid>

                <TextBlock Name="UserDataPasswordMistakeTextBlock" Text="Ошибка: Пароль" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextAlignment="Center" Style="{DynamicResource UserDataMistakesTextBlockStyle}"/>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="1" Name="UserProfileDataSaveButton" Click="UserProfileDataSaveButton_Click" Width="125" Height="45" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource UserDataIntroductionButtonStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ContentControl HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Content="{materialDesign:PackIcon Kind=ContentSave}"/>
                
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" Text="Сохранить" Style="{DynamicResource DataIntroductionButtonContentTextBlock}"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>