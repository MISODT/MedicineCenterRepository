                                    <RadioButton x:Name="SelectFemaleGenderRadioButton" Checked="SelectFemaleGenderRadioButton_Checked" Margin="10" Content="Женский" Style="{DynamicResource UserDataIntroductionRadioButtonStyle}"/>

                                    <RadioButton x:Name="SelectUndefinedGenderRadioButton" Checked="SelectUndefinedGenderRadioButton_Checked" Margin="10" Content="Не указан" Style="{DynamicResource UserDataIntroductionRadioButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Text="Место жительства" Style="{DynamicResource UserDataLabelTextBlockStyle}"/>

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
