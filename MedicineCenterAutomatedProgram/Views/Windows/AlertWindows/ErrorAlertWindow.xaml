<Window x:Class="MedicineCenterAutomatedProgram.Views.Windows.AlertWindows.ErrorAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ErrorAlertWindow" 
        Height="130" Width="300"
        ResizeMode="NoResize"
        SizeToContent="Manual"
        ShowInTaskbar="True"
        Topmost="False"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#A00"/>

        <TextBlock Grid.Row="1" Name="ErrorAlertWindowTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource AlertWindowTextBlockStyle}"/>

        <Button Grid.Row="2" Name="ErrorAlertWindowOKButton" Click="ErrorAlertWindowOKButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="30" Content="OK" Style="{DynamicResource PrimaryButtonStyle}"/>
    </Grid>
</Window>